
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/loginr.css" asp-append-version="true" />

<div class="loginContainer">
    <img src="~/assets/images/property-05.jpg" />
    <form action="">
        <h1>Register</h1>
        <div class="form-group">
            <label> Name</label>
            <input type="text" placeholder="suraj **" />
        </div>
        <div class="form-group">
            <label> PhoneNo</label>
            <input type="text" placeholder="134654" />
        </div>
        <div class="form-group">
            <label> Email</label>
            <input type="email" placeholder="ss****gmail.com" />
        </div>
        <div class="form-group">
            <label> Password</label>
            <input type="password" placeholder="*******" />
        </div>
        <div class="form-group">
            <button class="btn btn-success">Register</button>
        </div>
        <div class="form-group">
            Alreadt have an account ?<a asp-action="Login" asp-controller="Auth" class="">Login here</a>
        </div>
    </form>
</div>

