
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/loginr.css" asp-append-version="true" />

<div class="loginContainer">
    <img src="~/assets/images/property-05.jpg" />
    <form action="">
        <h1>Login</h1>
         <div class="form-group">
             <label > Email</label>
             <input type="email"  placeholder="ss****gmail.com" />
         </div>
        <div class="form-group">
            <label> Password</label>
            <input type="password" placeholder="*******" />
        </div>
        <div class="form-group">
            <button class="btn btn-success">Login</button>
        </div>
        <div class="form-group">
            Don't have an account ?<a asp-action="Register" asp-controller="Auth" class="">Register here</a>
        </div>
    </form>
</div>

