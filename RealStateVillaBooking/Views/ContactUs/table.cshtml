@model IEnumerable<ContactUs>
@{
    ViewData["Title"] = "table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <center>Contact Us Details</center>
</h1>

<br />


<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: antiquewhite; /* Choose your desired background color */
        }

        .box {
            width: calc(33.33% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .box-two {
            width: calc(50% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid black !important; /* Ensure proper table border lines */
            padding: 20px; /* Increase padding */
        }

        .table-container {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items to the top */
            min-height: 100vh; /* Ensure the container takes up the full height of the viewport */
        }

        .btn-go-to-contact {
            margin-top: 20px; /* Add margin to the top */
        }

    </style>
</head>
<body>

    <div class="table-container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile</td>
                        <td>@item.Message</td>
                    </tr>
                }
            </tbody>
        </table>

        <br />
        <br />
        <!-- Button to go to the contact page -->
        <div class="btn-go-to-contact">
            <a asp-controller="ContactUs" asp-action="Contact" class="btn btn-primary">Go to Contact Page</a>
        </div>
    </div>

</body>
</html>
