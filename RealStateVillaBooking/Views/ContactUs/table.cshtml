@model IEnumerable<ContactUs>
@{
    ViewData["Title"] = "table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    <center>Contact Us Details</center>
</h1>

<br />


<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: antiquewhite; /* Choose your desired background color */
        }

        .box {
            width: calc(33.33% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .box-two {
            width: calc(50% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid black !important; /* Ensure proper table border lines */
            padding: 20px; /* Increase padding */
        }

        .table-container {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items to the top */
            min-height: 100vh; /* Ensure the container takes up the full height of the viewport */
        }

        .btn-go-to-contact {
            margin-top: 10px; /* Add margin to the top */
            text-align: center; /* Center the button horizontally */
            display: inline-block; /* Display the button as a block element */
            padding: 10px 20px; /* Add padding */
            background-color: #ff0000; /* Red background color */
            color: #ffffff; /* White text color */
            border-radius: 5px; /* Rounded corners */
            border: none; /* Remove border */
            cursor: pointer; /* Add cursor pointer on hover */
            transition: background-color 0.3s; /* Smooth transition for background color */
        }

            .btn-go-to-contact:hover {
                background-color: #cc0000; /* Darker red on hover */
            }

    </style>
</head>
<body>

    <div class="table-container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile</td>
                        <td>@item.Message</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Button to go to the contact page -->
    <center><div class="btn-go-to-contact">
        <a asp-controller="ContactUs" asp-action="Contact" class="btn btn-primary">Go to Contact Page</a>
        </div>
    </center>



</body>
</html>
